<% if tinder_user.messaged_by?(liker) %>
  <% color = "lime" %>
<% else %>
  <% color = "red" %>
<% end %>

<% if on_match_view %>
  <span
    style="width: 10px; height: 10px; border-radius: 100%; background: <%= color %>; position: absolute; top: 5px; right: 5px;"></span>
  <input
    type="checkbox"
    <% if tinder_user.messaged_by?(liker) %>
      checked
      disabled
    <% end %>
    style="position: absolute; top: 17px; right: 2px;">
  <% unless tinder_user.messaged_by?(liker) %>
    <a href="#"
       data-behavior="pretend-message"
       style="position: absolute; top: 35px; right: 0px; font-size: 14px; text-decoration: none;"
       title="Ignore this user">❌ </a>
  <% end %>
<% end %>
